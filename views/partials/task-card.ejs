<% for(let i = 0; i < tasks.length; ++i)  { %> 

    <section class="task-card" id="<%=tasks[i]._id%>">

        <section class="task-header">

            <div class="task-header-colorlead"></div>
            <h1><%= tasks[i].name %></h1>

        </section>

        <section class="task-description">
            <p class="task-description-content"><%= tasks[i].description %></p>
        </section>

        <section class="task-time">

            <section class="task-start">
                <span><%=tasks[i].startDate%></span>
                <span><%=tasks[i].startTime%></span>
            </section>

            <section class="task-time-delimiter">
                <!--En dash (long -)-->
                <span>&#8211;</span>
            </section>

            <section class="task-end">
                <span><%=tasks[i].endDate%></span>
                <span><%=tasks[i].endTime %></span>
            </section>

        </section>

        <section class="task-complete">
            <button type="button">Mark as Complete</button>
        </section>
<!--Legacy change-->
        <section class="task-settings">
            <img class="task-settings-button" src="assets/settings-svgrepo-com.svg" alt="Settings button">

                <section class="task-settings-container hidden">

                    <section class="task-settings-options">
                        <button>Edit Task</button>
                        <button>Delete Task</button>
                    </section>

                    <section class="task-edit">
                        
                        <form class="task-edit-form">

                            <section class="task-edit-name-container">

                                <label for="task-edit-name">New Name:</label>
                                <input id="task-edit-name">

                            </section>

                            <section class="task-edit-description-container">

                                <label>New Description:</label>
                                <input id="task-edit-description">

                            </section>

                            <section class="task-edit-start-time-container">

                                <label>New Start:</label>
                                <input id="task-edit-start-time">

                            </section>

                            <section class="task-edit-end-time-container">

                                <label>New End:</label>
                                <input id="task-edit-end-time">

                            </section>

                            <section class="task-edit-color-container">

                                <label>New Color:</label>
                                <input id="task-edit-color">

                            </section>

                            <section class="task-edit-button-container">

                                <button></button>
                                <button></button>

                            </section>

                        </form>

                    </section>

                </section>

        </section>

    </section>

<% } %>